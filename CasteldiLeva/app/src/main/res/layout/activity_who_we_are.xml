<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#81AFE3"
    tools:context=".WhoWeAreActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="208dp"
                    android:layout_height="256dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.012"
                    app:srcCompat="@drawable/castel_di_leva_lunga" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DOVE NASCE #IORESTOACASTELDILEVA"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView2"
                    app:layout_constraintVertical_bias="0.071" />

                <TextView
                    android:id="@+id/tv_whoWeAre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp"
                    android:text="Un quartiere migliore passa per una comunità migliore  #IorestoaCasteldileva nasce dall'idea di un negozio sulla via, che in piena emergenza Coronavirus, invece di abbattersi, pensa a qualcosa per ripartire con più forza di prima. Così nasce l'iniziativa, insieme agli altri commercianti aderenti, di sensibilizzare gli abitanti della zona a scegliere le attività commerciali presenti sul territorio. Perché scegliere un'attività locale, è un discorso ampio e pieno di sfaccettature, ma ciò nonostante, tutte le attività aderenti si impegnano comunque attraverso questa iniziativa a essere maggiormente visibili, a farsi conoscere da chi ancora non conosce alcune realtà, a premiare tutti insieme gli abitanti che scelgono di restare all'interno della nostra comunità."
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    app:layout_constraintVertical_bias="0.147" />

                <Button
                    android:id="@+id/btn_goBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="torna indietrio"
                    app:layout_constraintTop_toBottomOf="@+id/tv_whoWeAre"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:layout_editor_absoluteX="134dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>